        'lib/queue.v1.min.js',
        'lib/stc_visualization_components/utils.min.js',
        'lib/stc_visualization_components/bar.min.js',
        'lib/d3-tip.js',
        'lib/d3-array.v1.min.js',
        'lib/d3-geo.v1.min.js',
        'lib/d3-geo-projection.v2.min.js',
        'lib/topojson.v1.min.js',
        'lib/jquery.class.js',
